{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExtractedOptionPosition",
  "type": "object",
  "additionalProperties": false,
  "required": ["underlying","expiration","strike","right","quantity","avg_price"],
  "properties": {
    "broker_detected": { "type": "string" },
    "underlying": { "type": "string", "pattern": "^[A-Z.]{1,6}$" },
    "expiration": { "type": "string", "format": "date" },
    "strike": { "type": "number" },
    "right": { "type": "string", "enum": ["C","P"] },
    "quantity": { "type": "integer" },
    "avg_price": { "type": "number" },
    "mark": { "type": "number" },
    "bid": { "type": "number" },
    "ask": { "type": "number" },
    "pl": { "type": "number" },
    "pl_pct": { "type": "number" },
    "account_hint": { "type": "string" },
    "raw_text": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
