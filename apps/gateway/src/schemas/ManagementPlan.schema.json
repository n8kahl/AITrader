{
  "title": "ManagementPlan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent",
    "entry_logic",
    "stop_logic",
    "targets",
    "invalidations",
    "contracts_suggested",
    "voice_script",
    "confidence"
  ],
  "properties": {
    "intent": { "type": "string", "enum": ["hold","scale_in","scale_out","close","hedge"] },
    "entry_logic": { "type": "string" },
    "stop_logic": { "type": "string" },
    "targets": { "type": "array", "items": { "type": "number" } },
    "invalidations": { "type": "array", "items": { "type": "string" } },
    "contracts_suggested": {
      "type": "array",
      "items": { "type":"object","required":["ticker","why"],
        "additionalProperties": false,
        "properties": { "ticker":{"type":"string"}, "why":{"type":"string"} }
      }
    },
    "voice_script": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "integer", "minimum": 0, "maximum": 100 }
  }
}
