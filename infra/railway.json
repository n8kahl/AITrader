{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "nixpacksPlan": {
      "phases": {
        "install": { "cmds": ["npm ci"] },
        "build":   { "cmds": ["npm run build"] }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "port": 8080
  }
}
